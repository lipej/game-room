{
  "name": "game-room",
  "version": "1.0.0",
  "description": "A place to centralize your games",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "pnpm copy:proto && swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/main.js",
    "build": "swc src -d dist && pnpm copy:proto",
    "copy:proto": "cp -r src/application/configs/grpc/proto dist/application/configs/grpc/proto",
    "start": "NODE_ENV=production node dist/main.js",
    "clean": "rm -rf dist",
    "lint": "gts lint 'src/**/*.ts'",
    "fix": "gts fix 'src/**/*.ts'",
    "test": "DOTENV_CONFIG_PATH=./.env.test jest --setupFiles dotenv/config --collectCoverage",
    "test:watch": "pnpm test -- --watch",
    "codegen:buf": "buf generate --template proto/buf.gen.yaml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.19",
    "@swc/jest": "^0.2.23",
    "@types/amqplib": "^0.10.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^14.18.33",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "gts": "^3.1.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prisma": "^4.7.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.4",
    "@prisma/client": "^4.7.1",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "jsonwebtoken": "^8.5.1",
    "ksuid": "^3.0.0"
  }
}